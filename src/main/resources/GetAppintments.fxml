<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0"  xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.Controllers.GetAppointmentController">
    <children>
        <ScrollPane layoutX="50" layoutY="20" prefHeight="500.0" prefWidth="600.0" fitToWidth="true">
            <VBox fx:id="proceduresContainer" spacing="15" >
                <!-- Динамически добавляемые процедуры будут отображаться здесь -->
            </VBox>
        </ScrollPane>
        <Hyperlink fx:id="HyperLinkExit" onAction="#Exit_Pressed" layoutX="14.0" layoutY="14.0" prefHeight="42.0" prefWidth="39.0" text="&lt;-">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
            <style>
                -fx-background-color: transparent; /* Убираем фоновый цвет */
                -fx-border-color: transparent; /* Убираем рамку */
                -fx-text-fill: #000000; /* Устанавливаем цвет текста (при необходимости) */
            </style>
        </Hyperlink>
    </children>
</AnchorPane>